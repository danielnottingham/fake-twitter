<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <%= link_to "Fake-Twitter", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto mb-2 mb-lg-0">

        <% if user_signed_in? %>
          <% if current_user.avatar.attached? %>
            <li class="nav-item">
              <%= image_tag current_user.avatar, height: 40, width: 40, class: "rounded-circle" %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to current_user.username, edit_user_registration_path, class: 'nav-link active ' %>
          </li>
          <li class="nav-item">
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-primary nav-link", style: "margin-right:5px;" %>
          </li>
        <% else %>
          <li>
            <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>

      <%= form_with url: "/users", method: :get, local: true, class: "d-flex" do |form| %>
        <%= form.text_field :search_by_username, placeholder: "Search", class: "form-control me-2" %>
        <%= form.submit "Search", class: "btn btn-outline-light" %>
      <% end %>
    </div>
  </div>
</nav>