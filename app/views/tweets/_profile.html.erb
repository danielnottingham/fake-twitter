<div class="card" >
  <div class="card-header text-center">
    <%= link_to "/users/#{current_user.id}" do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
      <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
      <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
    </svg>
     Profile
    <% end %>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item text-center">
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar, height: 30, width: 30, class: "rounded-circle" %>
      <% end %>
      <strong><%= current_user.username %></strong>
      <small><%= current_user.email %></small>
    </li>
  </ul>
  <div class="card-body">
    <div class="text-center">
      <p><strong><%= link_to "Tweets", "/users/#{current_user.id}" %></strong> </p>
      <p><small><%= current_user.tweets.count %></small></p>
    </div>
    <div class="text-center">
      <p><strong><%= link_to "Following", "/users/#{current_user.id}" %></strong> </p>
      <p><small><%= current_user.following.count %></small></p>
    </div>
    <div class="text-center">
      <p><strong><%= link_to "Followers", "/users/#{current_user.id}" %></strong> </p>
      <small><%= current_user.followers.count %></small>
    </div>
  </div>
</div>